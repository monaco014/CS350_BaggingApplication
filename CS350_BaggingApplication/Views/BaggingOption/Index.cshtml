@model CS350_BaggingApplication.ViewModels.PackagingViewModel
@{
    ViewBag.Title = "Bagging Options";
}

<h2>Stored Packaging Types</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Max Weight</th>
            <th>Item Limit</th>
            <th>Dimentions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pack in Model.Packaging)
        {
            <tr>
                <td>@pack.Name</td>
                <td>@pack.WeightCapacity</td>
                <td>@pack.HardItemLimit</td>
                <td>@pack.Height X @pack.Width X @pack.Length</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(() => $(".table").DataTable())
    </script>
}
