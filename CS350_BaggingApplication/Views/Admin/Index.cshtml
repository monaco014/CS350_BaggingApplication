
@{
    ViewBag.Title = "AdministratorMenu";
}
<div class="jumbotron">
    <h4>AdministratorMenu</h4>
    <div class="row">
        <div class="col-md-4">
            <h2>ManageAccounts</h2>
            <button id="employeeManager" class="adminbutton" href=""><img src="https://img.icons8.com/ios-filled/100/000000/businessman.png" />Employee Manager</button>
            <button id="customerManager" class="adminbutton" href=""><img src="https://img.icons8.com/ios-filled/100/000000/gender-neutral-user.png" />Customer Manager</button>
        </div>
        <div class="col-md-4">
            <h2>ManageInventory</h2>
            <button id="addItems" class="adminbutton" onclick="location.href='@Url.Action("newItem", "admin")'"><img src="https://img.icons8.com/ios-filled/100/000000/open-box.png" />Add Items</button>
            <button id="modifyStock" class="adminbutton" onclick="location.href='@Url.Action("Index", "item")'"><img src="https://img.icons8.com/ios-filled/100/000000/warehouse-1.png" />Manage Stock</button>
        </div>
        <div class="col-md-4">
            <h2>BaggingSystem</h2>
            <button id="addNewPackaging" class="adminbutton" onclick="location.href='@Url.Action("newpackaging","admin")'"><img src="https://img.icons8.com/ios-filled/100/000000/box--v1.png" />Add Package Type</button>
            <button id="baggingConfig" class="adminbutton" href=""><img src="https://img.icons8.com/ios-filled/100/000000/box-settings-1.png" />Bagging Config</button>
        </div>
    </div>
</div>

