@model CS350_BaggingApplication.ViewModels.ItemFormViewModel

@{
    ViewBag.Title = "New Item";
}

<h2>NewItem</h2>

@using (Html.BeginForm("SaveItem", "Admin"))
{
    <div class="form-group">
        @Html.LabelFor(item => item.Name)
        @Html.TextBoxFor(item => item.Name)
        @Html.ValidationMessageFor(item => item.Name);
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.Description)
        @Html.TextBoxFor(item => item.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.Length)
        @Html.TextBoxFor(item => item.Length)
        @Html.ValidationMessageFor(item => item.Length)
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.Height)
        @Html.TextBoxFor(item => item.Height)
        @Html.ValidationMessageFor(item => item.Height)
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.Width)
        @Html.TextBoxFor(item => item.Width)
        @Html.ValidationMessageFor(item => item.Width)
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.Weight)
        @Html.TextBoxFor(item => item.Weight)
        @Html.ValidationMessageFor(item => item.Weight)
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.Quantity)
        @Html.TextBoxFor(item => item.Quantity)
        @Html.ValidationMessageFor(item => item.Quantity)
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.Price)
        @Html.TextBoxFor(item => item.Price)
        @Html.ValidationMessageFor(item => item.Price)
    </div>
    @Html.HiddenFor(item => item.Id)
    <button class="btn btn-primary">Create</button>

}