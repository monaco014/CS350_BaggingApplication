@model CS350_BaggingApplication.ViewModels.ItemViewModel
@{
    ViewBag.Title = "Admin Item";
}

<h2>Items</h2>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>@Html.ActionLink("Details", "Details", "Item", new { Id = item.Id }, new { @class = "btn btn-default" })</td>
            <td>@Html.ActionLink("Edit", "EditItem", new { Id = item.Id }, new { @class = "btn btn-default" })</td>
            <td>@Html.ActionLink("Delete", "DeleteItem", new { Id = item.Id }, new { @class = "btn btn-danger" })</td>
        </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(() => $(".table").DataTable())
    </script>
}
